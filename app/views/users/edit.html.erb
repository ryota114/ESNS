<div class="container">
  <div class="row my-3 mx-3">
    <h2>情報の編集</h2>
  </div>
  <%= form_with model: @user do |f| %>
    <div class="row mt-5">
      <div class="col-2 offset-2">
        <%= f.label :name, "ユーザー名" %>
      </div>
      <div class="col-5">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-2 offset-2">
        <%= f.label :introduction, "紹介文" %>
      </div>
      <div class="col-5">
        <%= f.text_area :introduction, placeholder: "ここに紹介文を入力してください", size: "40x5" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-2 offset-2">
        <%= f.label :image, "プロフィール画像" %>
      </div>
      <div class="col-5">
        <%= f.attachment_field :image %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="mx-auto">
        <%= f.submit "編集完了", class: "btn btn-success px-2 py-1 my-3 mr-5" %>
        <%= link_to "退会", unsubscribe_users_path, class: "btn btn-danger px-2 py-1 my-3 ml-5" %>
      </div>
    </div>
  <% end %>
</div>