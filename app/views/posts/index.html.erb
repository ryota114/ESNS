<div class="container">
  <div class="row mt-3">
    <div class="col-8 jscroll">
      <!--一覧部分テンプレート-->
      <div class="next-jscroll" id="index">
        <%= render "posts/index", posts: @posts %>
      </div>
      <%= link_to_next_page @posts, 'Next Page', class: "next next-jscroll" %>
    </div>

    <div class="col-4 my-3">
      <p class="mt-3 mb-0">検索</p>
      <div class="row ml-0">
        <%= render "posts/search" %>
      </div>
      <p class="mt-3 mb-0">投稿</p>
      <div class="row ml-0">
        <!--投稿部分テンプレート、投稿エラーの部分テンプレートを内包している-->
        <%= render "posts/new", post: @post %>
      </div>
    </div>
  </div>
</div>