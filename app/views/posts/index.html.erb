<div class="container">
  <div class="row mt-3">
    <div class="col-md-8", id="index">
      <!--一覧部分テンプレート-->
      <%= render "posts/index", posts: @posts %>
    </div>

    <div class="col-md-4 my-3">
      <p class="mt-3 mb-0">検索</p>
      <div class="row ml-0">
        <%= render "posts/search" %>
      </div>
      <p class="mt-3 mb-0">投稿</p>
      <div class="row ml-0">
        <!--投稿部分テンプレート、投稿エラーの部分テンプレートを内包している-->
        <%= render "posts/new", post: @post %>
      </div>
    </div>
  </div>
</div>